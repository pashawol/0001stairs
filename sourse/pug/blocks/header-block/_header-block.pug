mixin header-block()
	// start header-block
	+b.header-block#header-block.bg-wrap
		+pic("header-bg",'bg')(class="picture-bg")
		.container
			.row.align-items-center
				.col-xl-7.col-lg-6
					h1 Сделаем и&nbsp;установим лестницу любой сложности под ключ с&nbsp;гарантией до&nbsp;15&nbsp;лет
					+e.text Выезд замерщика в&nbsp;день обращения!
					+e.item-wrap.d-none.d-xl-block
						.row
							mixin item(i,t,p)
								+e.col.col-xl-3.col-6
									+e.item
										+pic(`head-${i}.png`,'bg','',0)
										+e.item-text--title=t
										+e.item-text--price=p
							+item("1","Из металла","от 39 640 Р")
							+item("2","Из дерева","от 49 840 ₽")
							+item("3","Из бетона","от 37 840 ₽")
							+item("4","Кованые","от 58 840 ₽")
				.col
					+form-wrap
						+e.top-title Получите ТОЧНЫЙ РАСЧЕТ лестницы
						+e.group
							+e.group-head Оставьте свой номер телефона и&nbsp;наш специалист свяжется с&nbsp;Вами в&nbsp;течение 45&nbsp;минут
							
							+e.group-body
								+input-lg('+7( ___ )___-__-__','tel','Ваш телефон:')
								.row.row--sm
									.col-sm-6
										+input('2 метра','text','Высота лестницы:')
									
									.col-sm-6
										+input('800 мм','text','Ширина:')
									
									.col-sm-6
										+input('210 мм','text','Подъем:')
									
									.col-sm-6
										+input('Металл','select','Материал:')
								+e.btn.btn-3d.btn-primary.btn-block(type="submit") Получить проект и и расчет
								+polite()
						//- +e.group
						+e.group-head 
							div
								strong.text-primary БЕСПЛАТНО  
								| 
								| к&nbsp;вам приедет инженер для уточнения размера лестницы 
						//- +e.group
						+e.group-head
							div
								strong.text-primary БЕСПЛАТНО  
								| 
								| отправим Вам наше коммерческое предложение с&nbsp;детальной сметой, 3D&nbsp;эскизов и&nbsp;стоимостью
			.row.d-xl-none
				mixin item(i,t,p)
					+e.col.col-md-3.col-6
						+e.item
							+pic(`head-${i}.png`,'bg','',0)
							+e.item-text--title=t
							+e.item-text--price=p
				+item("1","Из металла","от 39 640 ₽")
				+item("2","Из дерева","от 49 840 ₽")
				+item("3","Из бетона","от 37 840 ₽")
				+item("4","Кованые","от 58 840 ₽")

	// end header-block